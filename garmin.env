# garmin-bridge.env.example
DB_PATH=/data/message.db
ROOT_DIR=/data/media

STATE_DIR=/var/lib/garmin-bridge
STATE_DB=/var/lib/garmin-bridge/state.db

POLL_DB_SEC=1
TAIL_LIMIT=250
LOG_LEVEL=INFO
LOG_JSON=0

MAUBOT_WEBHOOK_URL=http://maubot:29316/_matrix/maubot/garmin-webhook
MAUBOT_WEBHOOK_TOKEN=

HTTP_BIND=0.0.0.0
HTTP_PORT=8808
HTTP_TOKEN=change-me

MAX_ATTACH_MB=25
MEDIA_EXTS=avif,jpg,jpeg,png,webp,gif,mp4,m4a,ogg,oga,wav
SEARCH_ROOTS=high,preview,low,audio,

PENDING_MEDIA_MAX_SEC=60
PENDING_MEDIA_RESCAN_SEC=1.0
PENDING_MEDIA_MAX_ATTEMPTS=30

SQLITE_TIMEOUT=2.5

ADB_BIN=adb
ADB_SERIAL=
GARMIN_PKG=com.garmin.android.apps.messenger
GARMIN_ACT=.activity.MainActivity

ADB_DEFAULT_SLEEP=0.8
ADB_COMPOSE_SLEEP=1.2
ADB_DISMISS_BACK_TWICE=1

OUTBOUND_DB_POLL_SEC=0.5
OUTBOUND_DB_POLL_MAX_SEC=12
OUTBOUND_ENQUEUE_WAIT_NEWTHREAD_SEC=8

# --- DB / Media ---
DB_PATH=/android-data/data/com.garmin.android.apps.messenger/databases/message.db
ROOT_DIR=/android-data/data/com.garmin.android.apps.messenger/no_backup

# --- State ---
STATE_DIR=/var/lib/garmin-bridge
SUBS_DB=/var/lib/garmin-bridge/statestore.db

# --- HTTP provision endpoint (Maubot -> bridge) ---
PROVISION_BIND=0.0.0.0
PROVISION_PORT=8788
# Replace this with a strong secret before running
PROVISION_SECRET=changeme_provision_secret
# Optional HMAC for payload verification
HMAC_SECRET=

# --- ADB ---
ADB_TARGET=redroid13:5555
ADB_KEEPALIVE_SEC=10

# --- Watcher/forwarding ---
LAST_N_BOOT=5
POLL_DB_SEC=2
TAIL_LIMIT=200
MEDIA_EXTS=avif,jpg,jpeg,png,ogg,oga,mp4,m4a
FORWARD_MODE=file_url
CAPTION_TARGETING=1
TARGET_WORD_STRIP=1
DELETE_ON_SUCCESS=0
DELETE_DELAY_SEC=30

# --- HTTP client timeouts & retries ---
HTTP_TIMEOUT_SEC=15
RETRY_BACKOFF_1=3
RETRY_BACKOFF_2=5
